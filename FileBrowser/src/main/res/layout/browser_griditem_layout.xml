<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/browser_margin"
  android:background="@drawable/browser_selectable_background"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/browser_listItemIcon"
    android:layout_width="@dimen/browser_iconSize"
    android:layout_height="@dimen/browser_iconSize"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"/>

  <TextView
    android:id="@+id/browser_listItemText"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/browser_margin"
    android:layout_below="@+id/browser_listItemIcon"
    android:layout_centerHorizontal="true"
    android:ellipsize="marquee"
    android:gravity="center_horizontal|top"
    android:maxLines="4"/>

  <TextView
    android:id="@+id/browser_listItemExtra"
    android:textStyle="italic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/browser_margin"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/browser_listItemText"
    android:layout_centerVertical="true"
    android:ellipsize="marquee"
    android:gravity="top|center_horizontal"
    android:maxLines="2"
    android:singleLine="false"/>

  <ProgressBar
    android:id="@+id/browser_listItemProgress"
    android:layout_width="@dimen/browser_toolbarIconSize"
    android:layout_height="@dimen/browser_toolbarIconSize"
    android:layout_alignBottom="@+id/browser_listItemIcon"
    android:layout_alignTop="@+id/browser_listItemIcon"
    android:layout_centerHorizontal="true"
    android:visibility="gone"/>
  <!--http://stackoverflow.com/questions/2160619/android-ellipsize-multiline-textview-->
</RelativeLayout>