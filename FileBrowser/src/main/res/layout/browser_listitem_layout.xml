<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/browser_selectable_background"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/browser_listItemIcon"
    android:layout_width="@dimen/browser_iconSize"
    android:layout_height="@dimen/browser_iconSize"
    android:layout_marginLeft="@dimen/browser_margin"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"/>

  <TextView
    android:id="@+id/browser_listItemText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/browser_margin"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/browser_listItemExtra"
    android:layout_toRightOf="@+id/browser_listItemIcon"
    android:ellipsize="marquee"
    android:gravity="center_vertical"
    android:singleLine="false"
    android:text="@string/browser_placeholder"/>

  <TextView
    android:id="@+id/browser_listItemExtra"
    android:textStyle="italic"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/browser_margin"
    android:layout_marginRight="@dimen/browser_margin"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical|right"
    android:gravity="center_vertical|right"
    android:singleLine="false"/>

  <ProgressBar
    android:id="@+id/browser_listItemProgress"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/browser_toolbarIconSize"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:indeterminate="true"
    android:visibility="gone"/>

</RelativeLayout>